	<pluginRepositories>
       <pluginRepository>
            <id>Maven JMeter Plugin</id>
                <url>http://yciabaud.github.com/jmeter-maven-plugin/repository</url>
        </pluginRepository>

		<pluginRepository>
			<releases>
				<updatePolicy>never</updatePolicy>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<id>central</id>
			<name>Maven Plugin Repository</name>
			<url>http://repo1.maven.org/maven2</url>
		</pluginRepository>
	</pluginRepositories>
	
	<profiles>
		<profile>
			<id>SkipJMeterTests</id>
			<activation>
				<activeByDefault>true</activeByDefault>
				<property>
					<name>jmeter-test-name</name>
					<value>skip</value>
				</property>
			</activation>
			<properties>
				<!-- effectively turn of the jmeter tests by putting them in a non-existant phase -->
				<run-in-phase>none</run-in-phase>
			</properties>
		</profile>
		<profile>
			<id>LoadAllContextAndMapData</id>
			<activation>
				<property>
					<name>jmeter-test-name</name>
					<value>LoadAllContextAndMapData</value>
				</property>
			</activation>
			<properties>
				<run-in-phase>verify</run-in-phase>
				<jMeterTestFile>LoadAllContextAndMapData.jmx</jMeterTestFile>
			</properties>
		</profile>
		<profile>
			<id>TerminalReportTest</id>
			<activation>
				<property>
					<name>jmeter-test-name</name>
					<value>TerminalReportTest</value>
				</property>
			</activation>
			<properties>
				<run-in-phase>verify</run-in-phase>
				<jMeterTestFile>TerminalReportTest.jmx</jMeterTestFile>
			</properties>
		</profile>
		<profile>
			<id>TerminalReportStressTest</id>
			<activation>
				<property>
					<name>jmeter-test-name</name>
					<value>TerminalReportStressTest</value>
				</property>
			</activation>
			<properties>
				<run-in-phase>verify</run-in-phase>
				<jMeterTestFile>TerminalReportStressTest.jmx</jMeterTestFile>
			</properties>
		</profile>
	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>com.lazerycode.jmeter</groupId>
				<artifactId>jmeter-maven-plugin</artifactId>
				<version>1.10.0</version>
				<executions>
					<execution>
						<id>jmeter-tests</id>
						<phase>${run-in-phase}</phase>
						<goals>
							<goal>jmeter</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<testFilesIncluded>
						<jMeterTestFile>${jMeterTestFile}</jMeterTestFile>
					</testFilesIncluded>
					<reportDir>${project.build.directory}/jmeter-reports</reportDir>
					<ignoreResultFailures>true</ignoreResultFailures>
					
					<jmeterUserProperties>
						<reportDir>${project.build.directory}/jmeter-reports</reportDir>
						<Host>${Host}</Host>
						<Port>${Port}</Port>
						<ContextPath>${ContextPath}</ContextPath>
						<MapRequestsMapLoopsPerModel>${MapRequestsMapLoopsPerModel}</MapRequestsMapLoopsPerModel>
						<MapRequestsModelCountMatchingCsvFile>${MapRequestsModelCountMatchingCsvFile}</MapRequestsModelCountMatchingCsvFile>
						<MapRequestsConcurrentUsers>${MapRequestsConcurrentUsers}</MapRequestsConcurrentUsers>
						<MapRequestsRampUpSeconds>${MapRequestsRampUpSeconds}</MapRequestsRampUpSeconds>
						<GeoserverHost>${Host}</GeoserverHost>
						<GeoserverPort>${Port}</GeoserverPort>
						<GeoserverContextPath>${ContextPath}</GeoserverContextPath>
					</jmeterUserProperties>
				</configuration>
			</plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>xml-maven-plugin</artifactId>
                <version>1.0-beta-3</version>
                <executions>
                    <execution>
                        <phase>${run-in-phase&gt;}</phase>
                        <goals>
                            <goal>transform</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <transformationSets>
                        <transformationSet>
                            <dir>${project.build.directory}/jmeter-reports</dir>
                            <stylesheet>extras/jmeter-results-detail-report_21.xsl</stylesheet>
                            <outputDir>${project.build.directory}/site/jmeter-results</outputDir>
                            <fileMappers>
                                <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.FileExtensionMapper">
                                    <targetExtension>html</targetExtension>
                                </fileMapper>
                            </fileMappers>
                        </transformationSet>
                    </transformationSets>
                </configuration>
            </plugin>
		</plugins>
	</build>
</project>
